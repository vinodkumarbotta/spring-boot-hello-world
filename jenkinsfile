pipeline {
    agent any
    environment {
        def scannerHome = tool 'sonarqube-vinod'
    }
    stages{
       
        stage("build code"){
            steps{
                script{
                    sh """
                    ls -lrt
                    mvn install
                    """
                }
            }
        }
        stage("Run Unit Test"){
            steps{
                script {
                    sh """
                    mvn test
                    """
                }
            }
        }
        stage("Code Analysis"){
            steps {
                withSonarQubeEnv('vinod-sonarqube') {
                    sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=app-test -Dsonar.projectName=app-test-proj -Dsonar.sources=. -Dsonar.java.binaries=target/classes -Dsonar.sourceEncoding=UTF-8"
                }
            }
        }
    }
}